                        <rect y="15" width="28" height="2" rx="1" fill="#ffffff" />
                        <rect y="25" width="32" height="2" rx="1" fill="#ffffff" />
                    </svg>
                    <a class="header-logo" asp-controller="Home" asp-action="Index">
                        @Localizer["Cable Car DUBROVNIK"]
                    </a>
                </div>
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
            <div class="header-menu">
