@inject CableCarDubrovnik.Web.App.Infrastructure.HtmlMetadata.MetadataContent metadataContent

<!doctype html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#372586" />
    <title>@(ViewData["Title"] == null ? "Cable Car Dubrovnik" : $"{@ViewData["Title"]} - Cable Car dubrovnik")</title>
    @Html.GenerateMetadataTags(metadataContent)
    <meta name="format-detection" content="telephone=no">
    <meta name="format-detection" content="date=no">
    <meta name="format-detection" content="address=no">
    <meta name="format-detection" content="email=no">
    <link rel="shortcut icon" href="~/favicon.png" type="image/x-icon">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="~/css/app/app.css" />
        <link rel="stylesheet" type="text/css" href="~/css/vendors/vendors.css" />
    </environment>

    <environment exclude="Development">
