                    <a onclick="return false;" href="#2" class="header-menu-link indicator">@Localizer["Cable Car History"].Value.ToUpper()</a>
                    <a onclick="return false;" href="#3" class="header-menu-link indicator">@Localizer["Cable Car Tickets"].Value.ToUpper()</a>
                    <a onclick="return false;" href="#4" class="header-menu-link indicator">@Localizer["Panoramic Drive"].Value.ToUpper()</a>
                    <a onclick="return false;" href="#5" class="header-menu-link indicator">@Localizer["Walking Tour"].Value.ToUpper()</a>
                    <a onclick="return false;" href="#6" class="header-menu-link indicator">@Localizer["Tour Offers"].Value.ToUpper()</a>
                    <a is-active-route asp-controller="ContactUs" asp-action="Index" class="header-menu-link">@Localizer["Contact Us"].Value.ToUpper()</a>
